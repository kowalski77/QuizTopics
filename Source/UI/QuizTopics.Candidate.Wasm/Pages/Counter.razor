@page "/counter"
@using QuizTopics.Candidate.Wasm.Services

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="CreateExamAsync">Create Exam</button>

@code {

    [CascadingParameter]
    public Task<AuthenticationState> AuthState { get; set; }
    
    [Inject] private IExamDataService ExamDataService { get; set; }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private async Task CreateExamAsync()
    {
        var userIdentifier = (await this.AuthState).User.Identity?.Name ?? throw new InvalidOperationException($"Could not retrieve the user");

        await this.ExamDataService.CreateExam(userIdentifier).ConfigureAwait(true);
    }
}
